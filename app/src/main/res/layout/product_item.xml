<?xml version="1.0" encoding="utf-8"?>
<layout>
	<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="194dp"
		android:layout_margin="7dp"
		app:cardCornerRadius="10dp">

		<LinearLayout
			android:id="@+id/cardview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/item_csName"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/colorPrimary"
				android:padding="4dp"
				android:textSize="12sp"
				android:text="TextView"
				android:textAlignment="center"
				android:textColor="#FFFFFF" />

			<ImageView
				android:id="@+id/imageView"
				android:layout_width="wrap_content"
				android:layout_height="96dp"
				android:layout_gravity="center"
				android:layout_margin="8dp"
				android:cropToPadding="false"
				android:padding="10dp"
				app:srcCompat="@mipmap/ic_launcher_round" />

		<TextView
			android:id="@+id/item_pdName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="TextView"
			android:textColor="@color/pdNameLightGray"
			android:textSize="14sp" />
		<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="horizontal" android:layout_gravity="center" android:gravity="center"
		android:padding="5dp">
		<TextView
			android:id="@+id/item_price"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="TextView"
			android:textColor="@color/priceGray"
			android:textSize="18sp"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"

					android:text="ì›"
					android:textColor="@color/priceGray"
					android:textSize="14sp"/>
		</LinearLayout>
	</LinearLayout>
</android.support.v7.widget.CardView>
</layout>